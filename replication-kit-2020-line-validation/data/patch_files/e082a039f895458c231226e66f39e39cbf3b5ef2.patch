+        DummyRandomKey drk5 = new DummyRandomKey(new Double[] {0.4, 0.25, 0.5, 0.8, 0.2, 0.5});
+        
+        assertTrue(drk1.isSame(drk2));
+        assertTrue(drk2.isSame(drk3));
+        assertFalse(drk3.isSame(drk4));
+        assertFalse(drk4.isSame(drk5));
+    }
