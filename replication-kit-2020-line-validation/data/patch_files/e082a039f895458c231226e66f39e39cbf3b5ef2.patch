+                    Arrays.asList(new String[] {"a", "b", "c", "d", "d"}),
+                    Arrays.asList(new String[] {"a", "b", "c", "d"})
+            );
+            fail("Uncaught exception");
+        } catch (IllegalArgumentException e) {
+            // no-op
+        }
+        try {
+            RandomKey.inducedPermutation(
+                    Arrays.asList(new String[] {"a", "b", "c", "d", "d"}),
+                    Arrays.asList(new String[] {"a", "b", "c", "d", "f"})
+            );
+            fail("Uncaught exception");
+        } catch (IllegalArgumentException e) {
+            // no-op
+        }
+    }
