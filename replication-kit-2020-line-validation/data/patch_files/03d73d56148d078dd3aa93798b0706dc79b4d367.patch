From 03d73d56148d078dd3aa93798b0706dc79b4d367 Mon Sep 17 00:00:00 2001
From: Sebastian Bazley <sebb@apache.org>
Date: Sun, 6 Apr 2008 22:38:53 +0000
Subject: [PATCH] NET-206 - use ENGLISH locale for upper/lowercase when
 converting strings

git-svn-id: https://svn.apache.org/repos/asf/commons/proper/net/branches/NET_2_0@645321 13f79535-47bb-0310-9956-ffa450edef68
---
 .../net/ftp/parser/DefaultFTPFileEntryParserFactory.java        | 2 +-
 .../java/org/apache/commons/net/tftp/TFTPRequestPacket.java     | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/main/java/org/apache/commons/net/ftp/parser/DefaultFTPFileEntryParserFactory.java b/src/main/java/org/apache/commons/net/ftp/parser/DefaultFTPFileEntryParserFactory.java
index 5af64926c..892cb107f 100644
--- a/src/main/java/org/apache/commons/net/ftp/parser/DefaultFTPFileEntryParserFactory.java
+++ b/src/main/java/org/apache/commons/net/ftp/parser/DefaultFTPFileEntryParserFactory.java
@@ -95,7 +95,7 @@ public FTPFileEntryParser createFileEntryParser(String key)
 	            String ukey = null;
 	            if (null != key)
 	            {
-	                ukey = key.toUpperCase();
+	                ukey = key.toUpperCase(java.util.Locale.ENGLISH);
 	            }
 	            if ((ukey.indexOf(FTPClientConfig.SYST_UNIX) >= 0) 
 	            		|| (ukey.indexOf(FTPClientConfig.SYST_L8) >= 0))
diff --git a/src/main/java/org/apache/commons/net/tftp/TFTPRequestPacket.java b/src/main/java/org/apache/commons/net/tftp/TFTPRequestPacket.java
index 2be51e44c..22647975c 100644
--- a/src/main/java/org/apache/commons/net/tftp/TFTPRequestPacket.java
+++ b/src/main/java/org/apache/commons/net/tftp/TFTPRequestPacket.java
@@ -144,7 +144,7 @@ public abstract class TFTPRequestPacket extends TFTPPacket
             ++index;
         }
 
-        mode = buffer.toString().toLowerCase();
+        mode = buffer.toString().toLowerCase(java.util.Locale.ENGLISH);
         length = _modeStrings.length;
 
         for (index = 0; index < length; index++)
